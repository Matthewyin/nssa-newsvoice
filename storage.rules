rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public document files (Markdown)
    // Anyone can read, only Admin SDK can write
    match /documents/{fileName} {
      allow read: if true;
      allow write: if false;
    }

    // TTS audio files - require authenticated users to read
    match /tts/{category}/{fileName} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
